# =========================================
# Jenkins Configuration
# =========================================
# URL de votre serveur Jenkins
JENKINS_URL=http://localhost:8081

# Identifiants Jenkins pour accéder aux logs
JENKINS_USER=admin
JENKINS_TOKEN=your_jenkins_api_token_here

# =========================================
# MCP Server Configuration
# =========================================
# Port sur lequel le serveur MCP écoute
PORT=8083

# URL complète du serveur MCP pour l'agent ADK
MCP_SERVER_URL=http://localhost:8083/mcp

# =========================================
# GitHub Configuration
# =========================================
# Repository GitHub à analyser
GITHUB_REPO_OWNER=Safwen707
GITHUB_REPO_NAME=ams_jenkins

# Token GitHub (OBLIGATOIRE pour Option B - création de PR)
# Générer sur : https://github.com/settings/tokens
# Permissions requises : repo (full control)
GITHUB_TOKEN=ghp_your_github_personal_access_token

# =========================================
# Google Gemini API Configuration (ADK)
# =========================================
# OBLIGATOIRE : Clé API Google Gemini pour l'agent ADK
# Obtenir sur : https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=AIzaSy...your_actual_api_key
GOOGLE_GENAI_API_KEY=AIzaSy...your_actual_api_key

# =========================================
# Agent Configuration
# =========================================
# Nombre maximum de tentatives de correction avant abandon
MAX_RETRY_ATTEMPTS=3

# Modèle Gemini à utiliser (gemini-2.5-flash, gemini-pro, etc.)
GEMINI_MODEL=gemini-2.5-flash
